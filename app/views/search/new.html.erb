<% provide(:title, 'Search') %>
<h1>Search</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <%= form_for(@search, url: searches_create_path) do |f| %>
    <%= f. label :course %>
    <%= f.text_field :course %>
    <%= f. label :subject %>
    <%= f.select :subject, Subject.all.map{ |s| s.name }  %>
    <%= f. label :usesubj %>
    <%= f.check_box :usesubj %>
    <%= f.submit %>
  <% end %>
  </div>
</div>
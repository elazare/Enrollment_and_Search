<% provide(:title, 'Search') %>
<h1>Search</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <%= form_for(@search, url: search_path) do %>
    <%= label_tag(:q, "Search for:") %>
    <%= label_tag :course_name %>
    <%= text_field_tag(:course_name) %>
    <%= label_tag :subject %>
    <%= select_tag(:subject_name, options_for_select(Subject.all.map{ |s| s.name})) %>
    <%= check_box_tag(:use_subjects) %>
    <%= label_tag(:use_subjects, "Use Subjects in Search") %>
    <%= submit_tag("Search") %>
  <% end %>
  </div>
</div>